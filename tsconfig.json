{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/admin/page.tsx",
    "app/api/designs/[slug]/page.sx",
    "sanity/design-cms/lib/sanity.client.tes"
  ],
  "exclude": ["node_modules"],

  "editor.defaultFormatter": "compilerOptions",
  "[javascript]": {
    "editor.defaultFormatter": "<compilerOptions>"
  }
}
